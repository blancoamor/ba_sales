<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="product_product_ba_sales">
            <field name="name">product.product.ba_sales</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                 <field name="default_code" position="after">
                     <field name="supplier_id" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_pricelist_item_form_ba">
            <field name="name">product.pricelist.item.ba</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
            <field name="arch" type="xml">
                <field name="categ_id" position="after">
                        <field name="supplier_id" />
                        <!-- field name="currency_id" / -->
                </field>
            </field>
        </record>

        <record id="view_product_template_tree" model="ir.ui.view">
            <field name="name">product.template.tree</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <tree string="Precios Blancoamor" editable="bottom">
                    <field name="default_code" readonly="1"/>
                    <field name="name" readonly="1"/>
                    <field name="list_price"/>
                    <field name="standard_price"/>
                </tree>
            </field>
        </record>

        <record id="action_ba_prices" model="ir.actions.act_window">
            <field name="name">Precios</field>
            <field name="res_model">product.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_product_template_tree"/>
        </record>

        <record id="sale_cuotas_form_view" model="ir.ui.view">
            <field name="name">sale.cuotas.form.view</field>
            <field name="model">sale.cuotas</field>
            <field name="arch" type="xml">
                <form string="Monto por Cuotas">
			<group string="Tipo de pago y producto a agregar"
	                    <field name="journal_id"/>
        	            <field name="product_id"/>
			</group>
			<group string="Cuotas y monto">
		                 <field name="cuotas"/>
        	            <field name="monto"/>
			</group>
                </tree>
            </field>
        </record>

        <record id="sale_cuotas_tree_view" model="ir.ui.view">
            <field name="name">sale.cuotas.tree.view</field>
            <field name="model">sale.cuotas</field>
            <field name="arch" type="xml">
                <tree string="Monto por Cuotas">
                    <field name="journal_id"/>
                    <field name="product_id"/>
                    <field name="cuotas"/>
                    <field name="monto"/>
                </tree>
            </field>
        </record>


        <record id="action_ba_cuotas_config" model="ir.actions.act_window">
            <field name="name">Cuotas</field>
            <field name="res_model">sale.cuotas</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="menu_ba_prices" name="Precios" parent="base.menu_product" sequence="12"
                action="action_ba_prices" />

        <menuitem id="menu_ba_sales_config" name="Blancoamor" 
            parent="base.menu_base_config" sequence="100"/>

        <menuitem id="menu_ba_sales_cuotas" name="Cuotas" 
            parent="menu_ba_sales_config" 
	    action="action_ba_cuotas_config"
	    sequence="100"/>


    </data>
</openerp>
